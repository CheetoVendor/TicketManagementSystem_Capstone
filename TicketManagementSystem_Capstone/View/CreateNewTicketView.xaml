<UserControl x:Class="TicketManagementSystem_Capstone.View.CreateNewTicketView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:viewmodels="clr-namespace:TicketManagementSystem_Capstone.ViewModel"
             xmlns:local="clr-namespace:TicketManagementSystem_Capstone.View"
             d:DataContext="{d:DesignInstance Type=viewmodels:CreateNewTicketViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <StackPanel>
        <Label Content="Ticket Information" FontSize="20"/>

        <!--Ticket Title-->
        <StackPanel Orientation="Horizontal">
            <Label Content="Title:"/>
            <TextBox Text="{Binding Title}"/>
        </StackPanel>

        <!--Ticket Description-->
        <StackPanel Orientation="Horizontal">
            <Label Content="Description:"/>
            <TextBox Text="{Binding Description}"
             TextWrapping="Wrap"  />
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Status:"/>
            <ComboBox  ItemsSource="{Binding Statuses}"  SelectedItem="{Binding Status}"/>
        </StackPanel>
        
        <StackPanel Orientation="Horizontal">
            <Label Content="Assigned To:"/>
            <ComboBox ItemsSource="{Binding Groups}" SelectedItem="{Binding AssignedTo}"/>
        </StackPanel>
        
        <Label Content="Customer Information" FontSize="20"/>
        <StackPanel Orientation="Horizontal">
            <Label Content="Customer Name:"/>
            <TextBox  Text="{Binding CustomerName}"/>
        </StackPanel>
        
        <StackPanel Orientation="Horizontal">
            <Label Content="Phone Number:"/>
            <TextBox  Text="{Binding Phone}"/>
        </StackPanel>
        
        <StackPanel Orientation="Horizontal">
            <Label Content="Email:"/>
            <TextBox Text="{Binding Email}"/>
        </StackPanel>
        
        <StackPanel Orientation="Horizontal">
            <Label Content="Priority:"/>
            <ComboBox ItemsSource="{Binding Priorities}" 
                      SelectedItem="{Binding Priority}"/>
        </StackPanel>
        
        <StackPanel Orientation="Horizontal" Margin="20,5">
            <Button Content="Create Ticket" Command="{Binding CreateTicketCommand}"/>
            <Button Content="Clear" Command="{Binding ClearCommand}"/>
        </StackPanel>
        
    </StackPanel>
</UserControl>
